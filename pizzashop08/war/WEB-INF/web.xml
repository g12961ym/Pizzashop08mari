<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<filter>
		<filter-name>logincheck</filter-name>
		<filter-class>jp.kadai.LoginCheckFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>logincheck</filter-name>
		<url-pattern>/private.jsp</url-pattern>
	</filter-mapping>
	
	<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>jp.kadai.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>add_pizzadata</servlet-name>
		<servlet-class>jp.kadai.AddPizzaDataServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>add_pizzadata</servlet-name>
		<url-pattern>/addmenu</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>add_customerdata</servlet-name>
		<servlet-class>jp.kadai.AddCustomerDataServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>add_customerdata</servlet-name>
		<url-pattern>/order</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>edit_pizzadata</servlet-name>
		<servlet-class>jp.kadai.EdipPizzaDataServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>edit_pizzadata</servlet-name>
		<url-pattern>/edit</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>del_pizzadata</servlet-name>
		<servlet-class>jp.kadai.DelPizzaDataServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>del_pizzadata</servlet-name>
		<url-pattern>/del</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>show_pizzadata</servlet-name>
		<servlet-class>jp.kadai.ShowPizzaDataServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>show_pizzadata</servlet-name>
		<url-pattern>/showmenu</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>show_customerdata</servlet-name>
		<servlet-class>jp.kadai.ShowCustomerDataServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>show_customerdata</servlet-name>
		<url-pattern>/showorder</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>public.html</welcome-file>
	</welcome-file-list>
</web-app>
